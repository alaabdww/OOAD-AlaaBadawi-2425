<Page x:Class="WpfUser.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="LightGray">
   <Grid>
      <Border BorderBrush="Orange" BorderThickness="2" CornerRadius="8" Background="White" Padding="28" Margin="60">
         <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
               <Image x:Name="imgLogo" Height="64" Width="110" Margin="0,0,24,0"/>
               <TextBlock x:Name="txtWelkom" FontSize="24" Foreground="Orange" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
               <Button Content="Mijn Rapporten" Width="150" Margin="0,0,10,0" Background="Orange" Foreground="White" Click="btnRapporten_Click"/>
               <Button Content="Benchmarken" Width="150" Margin="0,0,10,0" Background="Orange" Foreground="White" Click="btnBenchmark_Click"/>
               <Button Content="Profiel" Width="120" Background="Orange" Foreground="White" Click="btnProfiel_Click"/>
                    <Button Content="Uitloggen" Width="120" Background="Orange" Foreground="White" Click="btnUitloggen_Click"/>
                </StackPanel>
         </StackPanel>
      </Border>
   </Grid>
</Page>
