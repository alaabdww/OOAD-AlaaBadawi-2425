<Page x:Class="WpfUser.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="LightGray">
   <Grid>
      <Border BorderBrush="Orange" BorderThickness="2" CornerRadius="8" Background="White" Padding="24" Margin="80">
         <StackPanel>
            <TextBlock Text="Inloggen" FontSize="22" Foreground="Orange" FontWeight="Bold" Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
               <Label Content="Login:" Width="100"/>
               <TextBox x:Name="txtLogin" Width="180"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
               <Label Content="Wachtwoord:" Width="100"/>
               <PasswordBox x:Name="pwdWachtwoord" Width="180"/>
            </StackPanel>
            <Button x:Name="btnLogin"
                    Content="Inloggen"
                    Width="120"
                    Height="34"
                    Background="Orange"
                    Foreground="White"
                    Click="btnLogin_Click"/>
            <TextBlock x:Name="txtFeedback" Foreground="Red" Margin="0,16,0,0"/>
         </StackPanel>
      </Border>
   </Grid>
</Page>
