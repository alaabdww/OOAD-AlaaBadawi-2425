<Window x:Class="WpfMatchFiles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMatchFiles"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid x:Name="txtResultaat" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="80" />
                <RowDefinition Height="80" />
                <RowDefinition Height="80" />
            </Grid.RowDefinitions>
            <Button x:Name="btn1" Grid.Column="0" Grid.Row="0" Content="Kies bestand 1..." HorizontalAlignment="Center"  VerticalAlignment="Center" Click="btn1_Click"/>
            <Button x:Name="btn2" Grid.Column="0" Grid.Row="1" Content="Kies bestand 2..." HorizontalAlignment="Center"  VerticalAlignment="Center" Click="btn2_Click"/>
            <TextBox x:Name="txtBestand1" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Text=""  Width="200"/>
            <TextBox x:Name="txtBestand2" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Text=""  Width="200"/>
            <Button Grid.Column="2" Grid.Row="2" Content="Vergelijk" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click" />
            <TextBlock x:Name="txtResultaat1" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="0" TextWrapping="Wrap" Text="" VerticalAlignment="Center"  Width="400" FontSize="20" Grid.ColumnSpan="2"/>
        </Grid>
    </Grid>
</Window>
