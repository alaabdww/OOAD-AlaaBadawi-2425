<Window x:Class="WpfJordy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfJordy"
        mc:Ignorable="d"
        Title="WPFJordy" Height="1000" Width="760" MinWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="Beige">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Source="/files/logo.png" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
            <TextBlock Text="red Jordy" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" FontFamily="Bookman Old Style"></TextBlock>
            <Button Content="LOGIN" Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,10,10,0"/>
        </Grid>
        <WrapPanel Grid.Row="1" HorizontalAlignment="Center" Orientation="Horizontal">
            <Image Source="/files/jordy1.jpg" Height="160" Width="120" Margin="10, 10, 10, 10"></Image>
            <Image Source="/files/jordy2.jpg" Height="160" Width="120" Margin="10, 10, 10, 10"></Image>
            <Image Source="/files/jordy3.jpg" Height="160" Width="120" Margin="10, 10, 10, 10"></Image>
            <Image Source="/files/jordy4.jpg" Height="160" Width="120" Margin="10, 10, 10, 10"></Image>
        </WrapPanel>
    </Grid>
</Window>
